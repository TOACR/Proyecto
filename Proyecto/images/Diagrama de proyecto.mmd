classDiagram
    direction LR

    class login {
        -correo: string
        -password: string
    }

    class menu {
        -estudiante: link button
        -curso: link button
        -profesor: link button
        -contacto: link button
        -salir: link button
    }

    class estudiante {
        -id_estudiante: int
        -nombre: string
        -apellido1: string
        -apellido2: string
        -correo: string
        -carrera: string
        -curso: string
        -salir: link button
    }

    class curso {
        -codigo: string
        -nombre: string
        -creditos: int
        -salir: link button
    }

    class profesor {
        -id_profesor: int
        -nombre: string
        -apellido1: string
        -apellido2: string
        -correo: string
        -carrera: string
        -curso: string
        -salir: link button
    }

    class contacto {
        -nombre: string
        -correo: string
        -asunto: string
        -mensaje: string
        -salir: link button
    }

    class salir {
        -cerrarSesion()
    }

    %% Flujo principal
    login --> menu : "autentica"
    menu --> estudiante : "abre"
    menu --> curso : "abre"
    menu --> profesor : "abre"
    menu --> contacto : "abre"

    %% Relaciones de dominio
    estudiante "0..*" -- "0..*" curso : "matrícula"
    profesor  "0..*" -- "0..*" curso : "imparte"

    %% Botón salir en TODAS las vistas
    menu ..> salir : "cerrar sesión"
    estudiante ..> salir : "cerrar sesión"
    profesor ..> salir : "cerrar sesión"
    curso ..> salir : "cerrar sesión"
    contacto ..> salir : "cerrar sesión"

    %% Salir siempre vuelve al login
    salir --> login : "redirige"


    

    



